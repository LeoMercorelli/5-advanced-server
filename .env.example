# ------------------------
# Servidor
# ------------------------

# Puerto en el que corre la aplicación
PORT=8080

# URL de conexión a MongoDB
MONGODB_URL="mongodb+srv://<usuario>:<password>@<cluster>/<database>?retryWrites=true&w=majority"

# ------------------------
# Autenticación JWT
# ------------------------

# Clave secreta para firmar tokens
JWT_SECRET="<jwt_secret>"
# Tiempo de expiración del token (ej: 1d, 2h, 30m)
JWT_EXPIRES=1d
# Nombre de la cookie que guarda el JWT
JWT_COOKIE_NAME=token

# ------------------------
# Seguridad
# ------------------------

# Cantidad de rondas de salt para hashing de contraseñas
SALT_ROUNDS=10

# ------------------------
# Base URL
# ------------------------

# URL base de la aplicación (usada en links de mails)
BASE_URL="http://localhost:8080"

# ------------------------
# Mailing
# ------------------------

# Proveedor de mail:
#   ethereal = crea una cuenta temporal automáticamente (solo pruebas, no envía a Internet)
#   smtp     = usa las credenciales SMTP de abajo
MAIL_PROVIDER=ethereal

# Dirección del remitente que aparece en los correos
MAIL_FROM="Ecommerce <no-reply@example.com>"

# Configuración SMTP (solo si MAIL_PROVIDER=smtp)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER="<usuario_smtp>"
SMTP_PASS="<password_smtp>"
